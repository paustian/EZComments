<div class="container-fluid">
    <div class="row">
        <h3>{{ __('Comments') }}</h3>
        {{  comments }}
        <form action="{{ path('zikulaezcommentsmodule_comment_comment') }}" method="post" enctype="application/x-www-form-urlencoded">
            <input type="hidden" name="artId" value="{{ artId }}">
            <input type="hidden" name="module" value="{{ module }}">
            <input type="hidden" name="retUrl" value="{{ retUrl }}">
            <input type="hidden" name="areaId" value="{{ areaId }}">
            <table class=""table">
            {% if currentUser.loggedIn %}
                <tr><td><b>{{ __('Name: ') }} </b></td><td><input name="user" value="{{  currentUser.uname }}" maxlengh="100" size="50" /></td></tr>
                {%  else %}
                <tr><td><b>{{ __('Name: ') }} </b></td><td><input name="user" value="Anonymous Coward" maxlengh="100" size="50" /></td></tr>
                    <tr><td><b>{{ __('Email: ') }} </b></td><td><input name="anonEmail" value="Anonymous Coward's Email" maxlengh="100" size="50" /></td></tr>
                    <tr><td><b>{{ __('Website: ') }} </b></td><td><input name="anonWebsite" value="Anonymous Coward's Website" maxlengh="100" size="50" /></td></tr>

            {% endif %}
            <tr><td><b>{{  __('Subject: ') }} </b></td><td><input name="subject" maxlength="100" size="50" /></td></tr>
            </table>
            <br />
            <textarea rows="5" cols="60" name="comment">
Place comment here.
            </textarea>
            <div class="form-group">
                <button class="btn btn-success" type="submit" name="addComment" value="addComment">
                    {{ __('Add comment') }}
                </button>
            </div>
        </form>
    </div><!-- row -->
</div>