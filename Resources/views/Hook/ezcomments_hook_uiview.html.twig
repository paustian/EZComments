{{ pageAddAsset('javascript', zasset('jquery-ui/jquery-ui.js')) }}
{{ pageAddAsset('stylesheet', asset('jquery-ui/themes/base/jquery-ui.min.css')) }}
{{ pageAddAsset('stylesheet', zasset('@ZikulaEZCommentsModule:css/style.css')) }}
{{ pageAddAsset('javascript', zasset('@ZikulaEZCommentsModule:js/Zikula.EZComments.GetComments.js')) }}

<hr/>
<div id="Comments">
    <h3>{{ __('Comments') }}</h3>
    {% for item in items %}
        {% if currentUser.uid == item.ownerid %}
            <div id="itemComment_{{ item.id }}">
                <h3 id="itemSubject_{{ item.id }}">{{ item.subject }}</h3>
                <p><i class="username" id="itemName_{{ item.id }}">{{ currentUser.uname }}</i>
                    {% if item.replyto == 0 %}
                    <span id="twiddle_{{ item.id }}" class="fa fa-toggle-left"></span>
                    {% endif %}
                </p>
                <p id="itemComment_{{ item.id }}">{{ item.comment }}</p>
                <div id="itemChild_{{ item.id }}"></div>
                <hr/>
            </div>
        {% else %}
            <div id="itemComment_{{ item.id }}">
                <h3 id="itemSubject_{{ item.id }}">{{ item.subject }}</h3>
                <p><i class="username" id="itemName_{{ item.id }}"> {{ item.anonname }}</i>
                {% if item.replyto == 0 %}
                    <span id="twiddle_{{ item.id }}" class="fa fa-toggle-left"></span>
                {% endif %}
                </p>
                <p id="itemComment_{{ item.id }}">{{ item.comment }}</p>
                <div id="itemChild_{{ item.id }}"></div>
                <hr/>
            </div>
        {% endif %}
        <hr/>
    {% endfor %}
</div>
<div class="comment_form">
    <form id="commentForm" action="{{ path('zikulaezcommentsmodule_comment_comment') }}" method="post"
          enctype="application/x-www-form-urlencoded" class="noscriptbutton">
        <input type="hidden" name="artId" value="{{ artId }}">
        <input type="hidden" name="module" value="{{ module }}">
        <input type="hidden" name="retUrl" value="{{ retUrl }}">
        <input type="hidden" name="areaId" value="{{ areaId }}">
        <table class="table">
            {% if currentUser.loggedIn %}
                <tr>
                    <td><b>{{ __('Name: ') }} </b></td>
                    <td><input name="user" value="{{ currentUser.uname }}" maxlengh="100" size="50"/></td>
                </tr>
            {% else %}
                <tr>
                    <td><b>{{ __('Name: ') }} </b></td>
                    <td><input name="user" value="Anonymous Coward" maxlengh="100" size="50"/></td>
                </tr>
                <tr>
                    <td><b>{{ __('Email: ') }} </b></td>
                    <td><input name="anonEmail" value="Anonymous Coward's Email" maxlengh="100" size="50"/></td>
                </tr>
                <tr>
                    <td><b>{{ __('Website: ') }} </b></td>
                    <td><input name="anonWebsite" value="Anonymous Coward's Website" maxlengh="100" size="50"/></td>
                </tr>

            {% endif %}
            <tr>
                <td><b>{{ __('Subject: ') }} </b></td>
                <td><input name="subject" maxlength="100" size="50"/></td>
            </tr>
        </table>
        <br/>
        <textarea rows="5" cols="60" name="comment">
Place comment here.
            </textarea>
        <div class="form-group">
            <button id="addComment" class="btn btn-success" type="submit" name="addComment" value="addComment">
                {{ __('Add comment') }}
            </button>
        </div>
    </form>
</div><!-- comment form -->